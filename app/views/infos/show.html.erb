<main class="main">
  <div class="info__wrapper">
    <% if user_signed_in? && current_user.id == @info.user.id%>
      <div class="info__manage">
        <%= link_to "編集する", edit_info_path, class: :nave__btn %>
        <%= link_to "削除する", info_path, method: :delete, class: :nave__btn %>
      </div>
    <% end %>
  <div class="post-form">
    <div class="info-inner">
      <div class="info-title">
        <p>商材名</p>
        <p><%= @info.title%></p>
      </div>
      <div class=info-content>
        <p>内容</p>
        <p><%= @info.content%></p>
      </div>
      <%if @info.image.attached?%>
      <div class=info-img>
        <%= image_tag @info.image, class: "post-image" %>
      </div>
      <%else%>
      <div class=info-img>
        <%= image_tag "unnamed.png", class: "post-image"%> 
      </div>
      <%end%>
    </div>
  </div>
  <div class="message-content">
    <h3>コメント</h3>
    <div class="message">
      <%= form_with(model: [@info, @comment], local: true) do |f|%>
        <%= f.text_field :text %>
        <%= f.submit '送信' %>
      <% end %>
    </div>
    <ul class="messages-lists">
        <% @comments.each do |comment| %>
          <li class="message-list">
            <p><%= comment.text %></p>
          </li>
        <% end %>
    </div>
  </div>
</div>
</main>
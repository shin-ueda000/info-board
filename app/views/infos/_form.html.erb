<%= form_with model: info, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "商材名" %><br />
    <%= f.text_field :title, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :content, "内容" %><br />
    <%= f.text_area :content, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>